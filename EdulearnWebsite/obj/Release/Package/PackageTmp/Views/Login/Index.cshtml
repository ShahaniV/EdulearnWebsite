@model EdulearnWebsite.Models.userModel

@{
    ViewBag.Title = "Edulearn | Login";
}
<script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="~/wwwroot/css/landingstyle.css" />

<div class="container-fluid g-container">
    <div class="container mx-auto">
        <div class="forms-container">
            <div class="signin-signup">
                @*@using (Html.BeginForm(new { @class = "sign-in-form", @id = "user-sign-in" }))
                {*@
				<form action="/Login/Index" class="sign-in-form" id="user-sign-in" method="post" novalidate="novalidate">
					@Html.AntiForgeryToken()

					<h2 class="title">Sign in</h2>
					@Html.ValidationSummary(true, "", new { @class = "text-danger" })
					@Html.ValidationMessageFor(model => model.username, "", new { @style = "color: red; min-width:400px; font-size:14px; " })
					<div class="input-field">
						<i class="fas fa-user"></i>
						@Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", placeholder = "Username", @style = "margin-top: 7px;" } })

					</div>
					@Html.ValidationMessageFor(model => model.password, "", new { @style = "color: red; min-width:400px; font-size:14px; " })
					<div class="input-field">
						<i class="fas fa-lock"></i>
						@Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password", @type = "password", @style = "margin-top: 7px;" } })

					</div>

					<div class="d-flex flex-row justify-content-between RemForContainer" style="min-width:360px">
						<div class="remember" style="float:left;">
							Remember Me
							<div class="checkbox float-right ml-1 rbox">
								@Html.EditorFor(model => model.RememberMe)
							</div>

						</div>
						<div class="forgot" style="float:right;">
							@Html.ActionLink("Forgot password?", "ForgotPassword", "Login", null, new { @class = "social-text mb-3 p-0 mb-0", @style = "color: #212529; text-decoration: none;" })
						</div>
					</div>
					@Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "text-danger" })

					<input type="submit" value="Login" class="btn solid" />

				</form>
                <form action="#" class="sign-up-form">
                    <h2 class="title">Sign-up</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text" placeholder="Username" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-envelope"></i>
                        <input type="email" placeholder="Email" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" placeholder="Password" />
                    </div>
                    <input type="submit" class="btn" value="Sign up" />
                </form>
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel" style="padding-bottom: 0 !important">
                <div class="logo-heading">
                    <img src="~/wwwroot/images/logo.png" alt="logo" class="logo" />
                    <h1 id="logo-title"><span>E</span>dulearn</h1>
                </div>
                <div class="content left-content">
                    <h3>New here?</h3>
                    <p>Click the sign-up button below and register!</p>
                    <button class="btn transparent">@Html.ActionLink("Sign Up", "SignUp", "Login", new { @class = "CssActionLinks" })</button>
                </div>
                <img src="~/wwwroot/images/log.svg" class="image log" alt="welcome svg" />
            </div>
            <div class="panel right-panel">
                <div class="content" style="text-align: center; margin: 0 auto; display: block">
                    <h3>One of us?</h3>
                    <p>Let's go! and login your account and start to learn!</p>
                    <button class="btn transparent" id="sign-in-btn">Login</button>
                </div>
                <img src="~/wwwroot/images/register.svg" class="image" alt="" />
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="~/wwwroot/js/landingscript.js"></script>
