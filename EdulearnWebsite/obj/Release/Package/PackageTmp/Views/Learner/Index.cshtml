@model IEnumerable<EdulearnWebsite.Models.learner>

@{
    ViewBag.Title = "Index";
}



<link rel="stylesheet" href="~/wwwroot/css/accounts.css" />
<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" />
<!--Bootstrap-->
<link href="https://fonts.googleapis.com/css?family=Acme|Lobster|Patua+One|Rubik|Sniglet">
<link rel="stylesheet" href="~/wwwroot/css/stye-switcher.css" />

<div class="container g-container">
    <main role="main" class="mx-auto">

        <!--Navigation Bar-->
        <header>
            <a href="#" class="logo"><img src="~/wwwroot/images/flavicon.ico" class="owl-nav" /><span class="letterE">E</span>dulearn</a>
            <div class="menuToggle" onclick="toggleMenu();"></div>
            <ul class="navigation">
                <li><a onclick="BackFunc()">Home</a></li>
                <li>@Html.ActionLink("Library", "Library", "Home")</li>
                <li>@Html.ActionLink("Game", "Game", "Home")</li>
				<li>
					<a class="dropdown-item pl-4 pt-0" onclick="ConfirmDelete()">Logout </a>
				</li>

				<div class="style-switcher outer-shadow">
					<div class="day-night s-icon outer-shadow inner-shadow">
						<i class="fas"></i>
					</div>
				</div>
            </ul>
        </header>

        <section style="padding-top: 10px !important" class="admin-form">
            <h1 style="text-align: center; margin-top: 100px;">User</h1>

            <div style="width: 90%; text-align: right;">
                <a href="/Learner/Create" class="button primary accButton" style="margin-bottom: 10px; ">Add User</a>
            </div>


            <!-- Break -->
            <div class="table-wrapper table-responsive-lg">
                <table style="text-align: center;">
                    <thead>
                        <tr>
                            <th style="text-align: center;">Username</th>
                            <th style="text-align: center;">Email</th>
                            <th style="text-align: center;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.username)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.email)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.LearnerID }, new { @class = "button primary small" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.LearnerID }, new { @class = "button primary small" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>




        <!--FOOTER-->
		<section id="footer">
			<div class="container footer-row">
				<hr />
				<div class="footer-left-col">
					<div class="footer-links">
						<div class="link-title">
							<h4>Support</h4>
							@Html.ActionLink("Resources", "Resources", "Home", null, new { @style = "font-size:0.8em; color:#777777; text-decoration: none;", target = "_blank" })<br />
							<a href="#contact"><small>Contact Us</small></a>
						</div>
						<div class="link-title">
							<h4>Legal</h4>
							@Html.ActionLink("Terms", "TermsAndConditions", "Home", null, new { @style = "font-size:0.8em; color:#777777; text-decoration: none;", target = "_blank" })<br />
							@Html.ActionLink("Privacy", "PrivacyPolicy", "Home", null, new { @style = "font-size:0.8em; color:#777777; text-decoration: none;", target = "_blank" })
						</div>
						<div class="link-title">
							<h4>Explore</h4>
							@Html.ActionLink("Modules", "Kindergarten", "Home", null, new { @style = "font-size:0.8em; color:#777777; text-decoration: none;" })<br />
							@Html.ActionLink("Ebooks", "Ebook", "Home", null, new { @style = "font-size:0.8em; color:#777777; text-decoration: none;" })
						</div>
						<div class="link-title">
							<h4>&nbsp</h4>
							@Html.ActionLink("Web Directory", "EnglishD", "Home", null, new { @style = "font-size:0.8em; color:#777777; text-decoration: none;" })<br />
							@Html.ActionLink("Trivias", "Trivia", "Home", null, new { @style = "font-size:0.8em; color:#777777; text-decoration: none;" })
						</div>
					</div>
				</div>

				<div class="footer-right-col">
					<div class="footer-info">
						<div class="copyright-text">
							<div style="padding-left: 15px;">
								<a href="https://www.facebook.com/systedulearn/" target="_blank"><i class="fa fa-facebook fa-lg p-1" style="        color: #1b9de9"></i></a>
								<i id="msgboxShowMessage" class="fa fa-phone fa-lg p-1" style="color: #1b9de9"></i>
								<i id="msgboxShowEmail" class="fa fa-envelope fa-lg p-1" style="color: #1b9de9"></i>
							</div>
							<br />
							<small>Copyright 2020 Systematrics</small>
						</div>
						<div class="footer-logo">
							<img src="~/wwwroot/images/owl-logo.png" />
						</div>
					</div>
				</div>
			</div>
		</section>

        <div id="msgbox-area" class="msgbox-area"></div>

    </main>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>

	var BackFunc = function () {

		var baseUrl="@Url.Action("Back","Home")";
   window.location.href=baseUrl;

	}
</script>
<!--Bootstrap-->
<script src="~/wwwroot/js/accounts.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"></script>
<script src="~/wwwroot/js/style-switcher.js"></script>