@model EdulearnWebsite.Models.Module

@{
	ViewBag.Title = "Edit";
}
<link rel="stylesheet" href="~/wwwroot/css/library.css" />

<link rel="stylesheet" href="https://cdn.rawgit.com/coverflowjs/coverflow/master/dist/coverflow.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
<link rel="stylesheet" href="~/wwwroot/css/modules.css" />

<style>

	* {
		-webkit-user-select: none;
		-moz-user-select: none;
		-ms-user-select: none;
		user-select: none;
	}
</style>

<!-- Wrapper -->
<div id="wrapper">

	<!-- Main -->
	<div id="main">
		<div class="inner">

			<!-- Header -->
			<header id="header">

				<!-- Home Back Button -->
				

				<div class="main-cont">
					<div id="time-i">
						<h1>-</h1>
					</div>
					<div id="date-i">
						<h1>-</h1>
					</div>
					<div id="day-i">
						<h1>-</h1>
					</div>
				</div>
			</header>


			<!-- Content -->
			<section class="pt-4">
				<header class="main mb-5">
					<h1 style="margin-bottom: 0 !important; text-align: center">Create</h1>
					<p style="text-align: center">Modules from <a href="https://lrmds.deped.gov.ph/" target="_blank"> DEPED LEARNING PORTAL</a></p>
				</header>



				@using (Html.BeginForm("Edit", "Modules", FormMethod.Post, new { enctype = "multipart/form-data", @class = "p-lg-5 p-sm-2", @style = "background-color:#fdf4e6;" }))
				{
					@Html.AntiForgeryToken()

					<div class="form-horizontal">
						<h3>Module</h3>
						<hr />
						@Html.ValidationSummary(true, "", new { @class = "text-danger" })
						<div class="form-group row gtr-uniform">

							<div class="col-6 col-12-small">
								<h4>Module No.</h4>
								@Html.EditorFor(model => model.moduleNo, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
								@Html.ValidationMessageFor(model => model.moduleNo, "", new { @class = "text-danger" })
							</div>

							<div class="col-6 col-12-small">
								<h4>Quarter No.</h4>
								@Html.EditorFor(model => model.quarterNo, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
								@Html.ValidationMessageFor(model => model.quarterNo, "", new { @class = "text-danger" })
							</div>
						</div>

						<div class="form-group row gtr-uniform">
							<div class="col-6 col-12-small">
								<h4>Title</h4>
								@Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
								@Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
							</div>
							<div class="col-6 col-12-small">
								<h4>Description</h4>
								@Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
								@Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
							</div>
						</div>

						<div class="form-group row gtr-uniform">
							<div class="col-6 col-12-small">
								<h4>Upload File</h4>
								<input type="file" name="fileFile" required="required" />
								@Html.ValidationMessageFor(model => model.files, "", new { @class = "text-danger" })
							</div>
							<div class="col-6 col-12-small">
								<h4>Subject</h4>
								@Html.EditorFor(model => model.subject, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
								@Html.ValidationMessageFor(model => model.subject, "", new { @class = "text-danger" })
							</div>
						</div>


						<div class="form-group row gtr-uniform">
							<div class="col-6 col-12-small">
								<h4>Grade Level</h4>
								@Html.DropDownListFor(model => model.gradeLevel, new List<SelectListItem>
													 { new SelectListItem { Text = "Kindergarten", Value = "Kindergarten"},
													   new SelectListItem { Text = "Grade1", Value = "Grade1"},
													   new SelectListItem { Text = "Grade2", Value = "Grade2"},
													   new SelectListItem { Text = "Grade3", Value = "Grade3"},
													   new SelectListItem { Text = "Grade4", Value = "Grade4"},
													   new SelectListItem { Text = "Grade5", Value = "Grade5"},
													   new SelectListItem { Text = "Grade6", Value = "Grade6"},
													   new SelectListItem { Text = "Grade7", Value = "Grade7"},
													   new SelectListItem { Text = "Grade8", Value = "Grade8"},
													   new SelectListItem { Text = "Grade9", Value = "Grade9"},
													   new SelectListItem { Text = "Grade10", Value = "Grade10"},
													   new SelectListItem { Text = "Grade11", Value = "Grade11"},
													   new SelectListItem { Text = "Grade12", Value = "Grade12"}

													   }, "Grade Level", new { htmlAttributes = new { @class = "form-control", @required = "required" } })

								@Html.ValidationMessageFor(model => model.gradeLevel, "", new { @class = "text-danger" })
							</div>
							<div class="col-6 col-12-small">
								<h4>Admin Username</h4>
								@Html.EditorFor(model => model.adminName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
								@Html.ValidationMessageFor(model => model.adminName, "", new { @class = "text-danger" })
							</div>
						</div>

						<div class="form-group">
							<div class="col-md-offset-2 col-md-10 pl-0">
								<input type="submit" value="Save" class="btn btn-default" /> |
								@Html.ActionLink("Back to Module List", "Index")
							</div>
						</div>
					</div>
				}


			</section>

		</div>
	</div>


</div>


@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
<!-- Library script -->

<script src="~/wwwroot/js/jquery.min.js"></script>
<script src="https://use.fontawesome.com/c0d25df00f.js"></script>
<script src="~/wwwroot/js/browser.min.js"></script>
<script src="~/wwwroot/js/breakpoints.min.js"></script>
<script src="~/wwwroot/js/util.js"></script>
<script src="~/wwwroot/js/library-admin.js"></script>

<!-- Calendar script -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
<script src="/wwwroot/js/modules.js"></script>
<script src="/wwwroot/js/modules_script/kinder.js"></script>
