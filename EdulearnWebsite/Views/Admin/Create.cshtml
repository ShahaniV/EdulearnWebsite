@model EdulearnWebsite.Models.admin

@{
    ViewBag.Title = "Create";
}

<link rel="stylesheet" href="~/wwwroot/css/accounts.css" />
<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" />
<!--Bootstrap-->
<link href="https://fonts.googleapis.com/css?family=Acme|Lobster|Patua+One|Rubik|Sniglet">
<link rel="stylesheet" href="~/wwwroot/css/stye-switcher.css" />

<div class="container g-container">
	<main role="main" class="mx-auto">

		<!--Navigation Bar-->
		<header>
			<a href="#" class="logo"><img src="~/wwwroot/images/flavicon.ico" class="owl-nav" /><span class="letterE">E</span>dulearn</a>
			<div class="menuToggle" onclick="toggleMenu();"></div>
			<ul class="navigation">
				<li><a onclick="BackFunc()">Home</a></li>
				<li>@Html.ActionLink("Library", "Library", "Home")</li>
				<li>@Html.ActionLink("Game", "Game", "Home")</li>
				<li>
					<a class="dropdown-item pl-4 pt-0" onclick="ConfirmDelete()">Logout </a>
				</li>

				<div class="style-switcher outer-shadow">
					<div class="day-night s-icon outer-shadow inner-shadow">
						<i class="fas"></i>
					</div>
				</div>
			</ul>
		</header>

		<section style="padding-top: 10px !important" class="admin-form">
			<h1 style="text-align: center; margin-top: 100px;">Admin</h1>

			<!-- Form -->
			<form method="post" action="/Admin/Create">
				@Html.AntiForgeryToken()
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				<div class="row gtr-uniform">
					<div class="col-6 col-12-xsmall">
						<label for="demo-name">First Name</label>
						@Html.EditorFor(model => model.firstname, new { htmlAttributes = new { @class = "form-control", placeholder = "First Name" } })
						@Html.ValidationMessageFor(model => model.firstname, "", new { @class = "text-danger" })
					</div>
					<div class="col-6 col-12-xsmall">
						<label for="demo-name">Last Name</label>
						@Html.EditorFor(model => model.lastname, new { htmlAttributes = new { @class = "form-control", placeholder = "Last Name" } })
						@Html.ValidationMessageFor(model => model.lastname, "", new { @class = "text-danger" })
					</div>
					<div class="col-6 col-12-xsmall">
						<label for="demo-name">Username</label>
						@Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", placeholder = "Username" } })
						@Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
					</div>
					<div class="col-6 col-12-xsmall">
						<label for="demo-name">Email</label>
						@Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
						@Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
					</div>
					<div class="col-6 col-12-xsmall">
						<label for="demo-name">Password</label>
						@Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password", @type = "password" } })
						@Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
					</div>
					<div class="col-6 col-12-xsmall">
						<label for="demo-name">Confirm Password</label>
						@Html.EditorFor(model => model.confirmPass, new { htmlAttributes = new { @class = "form-control", placeholder = "Password", @type = "password" } })
						@Html.ValidationMessageFor(model => model.confirmPass, "", new { @class = "text-danger" })
					</div>
					<div class="col-12">
						<ul class="actions">
							<li><a href="/Admin" class="button accButton">Back to List</a></li>
							<input type="submit" value="Add Admin" class="button primary ml-2 accButton" />
						</ul>
					</div>
				</div>
			</form>
		</section>




		<!--FOOTER-->
		<section id="footer">
			<div class="container footer-row">
				<hr />
				<div class="footer-left-col">
					<div class="footer-links">
						<div class="link-title">
							<h4>Support</h4>
							@Html.ActionLink("Resources", "Resources", "Home", null, new { @style = "font-size:0.8em; color:#777777; text-decoration: none;", target = "_blank" })<br />
							<a href="#contact"><small>Contact Us</small></a>
						</div>
						<div class="link-title">
							<h4>Legal</h4>
							@Html.ActionLink("Terms", "TermsAndConditions", "Home", null, new { @style = "font-size:0.8em; color:#777777; text-decoration: none;", target = "_blank" })<br />
							@Html.ActionLink("Privacy", "PrivacyPolicy", "Home", null, new { @style = "font-size:0.8em; color:#777777; text-decoration: none;", target = "_blank" })
						</div>
						<div class="link-title">
							<h4>Explore</h4>
							@Html.ActionLink("Modules", "Kindergarten", "Home", null, new { @style = "font-size:0.8em; color:#777777; text-decoration: none;" })<br />
							@Html.ActionLink("Ebooks", "Ebook", "Home", null, new { @style = "font-size:0.8em; color:#777777; text-decoration: none;" })
						</div>
						<div class="link-title">
							<h4>&nbsp</h4>
							@Html.ActionLink("Web Directory", "EnglishD", "Home", null, new { @style = "font-size:0.8em; color:#777777; text-decoration: none;" })<br />
							@Html.ActionLink("Trivias", "Trivia", "Home", null, new { @style = "font-size:0.8em; color:#777777; text-decoration: none;" })
						</div>
					</div>
				</div>

				<div class="footer-right-col">
					<div class="footer-info">
						<div class="copyright-text">
							<div style="padding-left: 15px;">
								<a href="https://www.facebook.com/systedulearn/" target="_blank"><i class="fa fa-facebook fa-lg p-1" style="        color: #1b9de9"></i></a>
								<i id="msgboxShowMessage" class="fa fa-phone fa-lg p-1" style="color: #1b9de9"></i>
								<i id="msgboxShowEmail" class="fa fa-envelope fa-lg p-1" style="color: #1b9de9"></i>
							</div>
							<br />
							<small>Copyright 2020 Systematrics</small>
						</div>
						<div class="footer-logo">
							<img src="~/wwwroot/images/owl-logo.png" />
						</div>
					</div>
				</div>
			</div>
		</section>

		<div id="msgbox-area" class="msgbox-area"></div>

	</main>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>

	var BackFunc = function () {

		var baseUrl="@Url.Action("Back","Login")";
   window.location.href=baseUrl;

	}
</script>
<!--Bootstrap-->
<script src="~/wwwroot/js/accounts.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"></script>
<script src="~/wwwroot/js/style-switcher.js"></script>